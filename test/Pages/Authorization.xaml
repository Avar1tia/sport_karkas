<Page x:Class="test.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock FontSize="50">Авторизация</TextBlock>
            <TextBlock>Логин</TextBlock>
            <TextBox Name="Login"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox Name="Password"></PasswordBox>
            <Button Click="Vhod">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
